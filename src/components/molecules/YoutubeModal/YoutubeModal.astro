<script>
  const btnOpenModal = document.querySelector(".youtube__button");
  const closeModalBtn = document.querySelector(".modal__close__button");

  const stopVideo = document.querySelector("video");
  btnOpenModal.addEventListener("click", () => {
    const dialog = document.querySelector("dialog");
    dialog.showModal();
  });
  closeModalBtn.addEventListener("click", () => {
    const dialog = document.querySelector("dialog");
    dialog.close();
    stopVideo.pause();
  });
</script>

<dialog class="youtube__modal__box">
  <iconify-icon
    class="modal__close__button"
    icon="lets-icons:close-round-duotone"
    width="40"
    height="40"
    style="color: #05ffee"></iconify-icon>
  <div class="modal__container">
    <iframe
      id="ytchannel"
      class="latestVideoEmbed"
      vnum="0"
      width="80%"
      height="80%"
      frameborder="0"
      allowfullscreen
      id="ytchannel"
    >
    </iframe>
  </div>
</dialog>

<style lang="scss">
  .youtube__modal__box {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    background-color: #00000096;
    z-index: 1000;
    backdrop-filter: blur(21px);
    @media screen and (max-width: 768px) {
      width: 100vw;
      height: 100dvh;
    }
  }
  .latestVideoEmbed {
    width: 100%;
    height: 100%;
    @media screen and (max-width: 768px) {
      height: 25%;
    }
  }
  .modal__close__button {
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
  }
  .modal__container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 100%;
  }
</style>
