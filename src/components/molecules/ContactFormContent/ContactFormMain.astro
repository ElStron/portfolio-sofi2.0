---
import Subtitle from "@src/components/atoms/Subtitle/Subtitle.astro";
---
<script>
  import {formValidation} from "@controllers/formValidation.controller";
  formValidation();

</script>

<Subtitle content="Get in touch with Me " />

<form method="POST" novalidate>
  <div>
    <label for="name">Your Name: * </label>
    <input type="text" id="name" name="name" required />
    <div class="error__msg" id="nameError"></div>
  </div>

  <div>
    <label for="email">Your Email: *</label>
    <input type="email" id="email" name="email" required />
    <div class="error__msg" id="emailError"></div>
  </div>

  <div>
    <label for="subject">Subject: *</label>
    <input type="text" id="subject" name="subject" required />
    <div class="error__msg" id="subjectError"></div>
  </div>

  <div>
    <label for="message">Message: *</label>
    <textarea id="message" name="message" rows="4" required></textarea>
    <div class="error__msg" id="messageError"></div>
  </div>

  <div class="loader"></div>
  <button class="form__submit" type="submit" value="Send">Send</button>
</form>
