---
import Title from "@atoms/Title/Title";
import SocialCard from "@molecules/SocialCard/SocialCard.astro";
import ContactFormContent from "@src/components/molecules/ContactFormContent/ContactFormContent.astro";
import DiscordCardContent from "@src/components/molecules/DiscordCardContent/DiscordCardContent.astro";
import YoutubeCardContent from "@src/components/molecules/YoutubeCardContent/YoutubeCardContent.astro";
import YoutubeModal from "@src/components/molecules/YoutubeModal/YoutubeModal.astro";
---

<section id="social" class="social">
  <Title
    titleDesc="Find me on   My social media"
    clase="title-dark social__title"
  />

  <div class="social__grid">
    <div class="social__item social__item-1">
      <SocialCard>
        <DiscordCardContent />
      </SocialCard>
    </div>
    <div class="social__item social__item-2">
      <SocialCard extrClass="youtube__card">
        <YoutubeCardContent />
      </SocialCard>
    </div>
    <div class="social__item social__item-3">
      <SocialCard>
        <ContactFormContent />
      </SocialCard>
    </div>
    <div class="social__item social__item-4">
      <SocialCard />
    </div>
  </div>
  <div class="social__background"></div>
  <YoutubeModal />
</section>
